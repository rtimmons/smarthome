import "../talos/just/nvm.just"

set shell := ["bash", "-lc"]

setup:
	{{nvm_use}}; \
	npm install

test:
	{{nvm_use}}; \
	npm run build

ha-addon:
	if [ ! -x "../talos/build/bin/talos" ]; then ../talos/build.sh; fi
	../talos/build/bin/talos addon build sonos-api

deploy:
	if [ ! -x "../talos/build/bin/talos" ]; then ../talos/build.sh; fi
	../talos/build/bin/talos addon deploy sonos-api
