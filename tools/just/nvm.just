nvm_use := "export NVM_DIR=\"$HOME/.nvm\"; NVM_VERSION_FILE=\"${NVM_VERSION_FILE:-$(git rev-parse --show-toplevel 2>/dev/null || pwd)/.nvmrc}\"; if [ ! -f \"$NVM_VERSION_FILE\" ]; then echo \"Missing $NVM_VERSION_FILE; cannot select Node runtime.\" >&2; exit 1; fi; if [ -s \"$NVM_DIR/nvm.sh\" ]; then . \"$NVM_DIR/nvm.sh\"; elif [ -s \"/opt/homebrew/opt/nvm/nvm.sh\" ]; then . \"/opt/homebrew/opt/nvm/nvm.sh\"; elif [ -s \"/usr/local/opt/nvm/nvm.sh\" ]; then . \"/usr/local/opt/nvm/nvm.sh\"; else echo \"nvm not installed; see docs/setup.md\" >&2; exit 1; fi; nvm use --silent >/dev/null || { echo \"nvm use failed; ensure $(cat \"$NVM_VERSION_FILE\") is installed\" >&2; exit 1; }"
