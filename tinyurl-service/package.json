{
  "name": "tinyurl-service",
  "version": "0.1.0",
  "private": true,
  "description": "Tiny URL management UI and API backed by MongoDB for Home Assistant.",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:once": "tsx src/server.ts",
    "start": "node --enable-source-maps dist/server.js",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "fmt": "prettier --check .",
    "fmt:write": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "check": "npm run lint && npm run fmt && npm run typecheck && npm run test && npm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "mongodb": "^6.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "tsx": "^4.17.0",
    "typescript": "^5.5.3",
    "vitest": "^2.0.5"
  }
}
